<%= form_with model: @challenge do |form| %>
  <div class="form-row mt-5 d-flex justify-content-between">
    <div class="form-group col-md-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :description %>
      <%= form.text_field :description, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :tag_id %>
      <%= form.collection_select :tag_id, Tag.order(:name), :id, :name, {}, {class: 'form-control'} %>
    </div>
    <div class="form-group">
      <%= form.label :action%>
      <%= form.submit class: 'btn btn-primary form-control '%>
    </div>
  </div>
<% end %>
